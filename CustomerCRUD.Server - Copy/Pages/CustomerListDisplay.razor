@inherits CustomerListDisplayBase

<div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
    <div class="card-header">
        <input type="checkbox" checked="@IsSelected" @onchange="CheckBoxChanged" />
        <h3>@Customer.FirstName @Customer.LastName</h3>
    </div>
    <img class="card-img-top imageThumbnail" src="@Customer.Image" />
    @if (ShowFooter)
    {
        <div class="card-footer text-center">
            <a href="@($"customerdetails/{Customer.CustomerID}")"
                class="btn btn-primary m-1">View</a>

            <a href="@($"customeredit/{Customer.CustomerID}")" class="btn btn-primary m-1">Edit</a>

            <a href="#" class="btn btn-danger m-1">Delete</a>
        </div>
    }
</div>